<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_van_ban_template_form" model="ir.ui.view">
        <field name="name">van_ban_template.form</field>
        <field name="model">van_ban_template</field>
        <field name="arch" type="xml">
            <form string="Mẫu văn bản">
                <sheet>
                    <div class="oe_title">
                        <label for="ma_mau"/>
                        <h1>
                            <field name="ma_mau" placeholder="Mã mẫu"/>
                        </h1>
                        <h2>
                            <field name="ten_mau" placeholder="Tên mẫu"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="loai_van_ban"/>
                            <field name="category_id"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Mô tả">
                        <field name="mo_ta" nolabel="1" placeholder="Mô tả về mẫu văn bản..."/>
                    </group>
                    <notebook>
                        <page string="Nội dung mẫu" name="content">
                            <field name="noi_dung_mau" 
                                   placeholder="Nhập nội dung mẫu. Sử dụng các biến: ${customer_name}, ${company_name}, ${date}, ${amount}..."/>
                        </page>
                        <page string="File mẫu" name="file">
                            <group>
                                <field name="file_mau" filename="file_name"/>
                                <field name="file_name" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_van_ban_template_tree" model="ir.ui.view">
        <field name="name">van_ban_template.tree</field>
        <field name="model">van_ban_template</field>
        <field name="arch" type="xml">
            <tree string="Mẫu văn bản">
                <field name="sequence" widget="handle"/>
                <field name="ma_mau"/>
                <field name="ten_mau"/>
                <field name="loai_van_ban"/>
                <field name="category_id"/>
                <button name="action_use_template" type="object" string="Sử dụng" icon="fa-plus"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_van_ban_template_search" model="ir.ui.view">
        <field name="name">van_ban_template.search</field>
        <field name="model">van_ban_template</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm mẫu">
                <field name="ma_mau"/>
                <field name="ten_mau"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Loại văn bản" name="group_type" context="{'group_by': 'loai_van_ban'}"/>
                    <filter string="Danh mục" name="group_category" context="{'group_by': 'category_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_van_ban_template" model="ir.actions.act_window">
        <field name="name">Mẫu văn bản</field>
        <field name="res_model">van_ban_template</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_van_ban_template_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo mẫu văn bản mới
            </p>
            <p>
                Tạo các mẫu văn bản để sử dụng lại khi tạo văn bản mới.
            </p>
        </field>
    </record>
</odoo>
