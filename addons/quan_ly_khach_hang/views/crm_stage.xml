<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View for CRM Stage -->
        <record id="view_crm_stage_form" model="ir.ui.view">
            <field name="name">crm_stage.form</field>
            <field name="model">crm_stage</field>
            <field name="arch" type="xml">
                <form string="Giai đoạn cơ hội">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="probability"/>
                            <field name="fold"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View for CRM Stage -->
        <record id="view_crm_stage_tree" model="ir.ui.view">
            <field name="name">crm_stage.tree</field>
            <field name="model">crm_stage</field>
            <field name="arch" type="xml">
                <tree string="Giai đoạn cơ hội">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="probability"/>
                    <field name="fold"/>
                </tree>
            </field>
        </record>

        <!-- Action for CRM Stage -->
        <record id="action_crm_stage" model="ir.actions.act_window">
            <field name="name">Giai đoạn cơ hội</field>
            <field name="res_model">crm_stage</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo giai đoạn cơ hội mới
                </p>
            </field>
        </record>
    </data>
</odoo>
