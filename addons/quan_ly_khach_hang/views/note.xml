<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_note_form" model="ir.ui.view">
            <field name="name">note.form</field>
            <field name="model">note</field>
            <field name="arch" type="xml">
                <form string="Ghi chú">
                    <sheet>
                        <div class="oe_title">
                            <label for="note_id"/>
                            <h1>
                                <field name="note_id" placeholder="Mã ghi chú"/>
                            </h1>
                            <field name="note_name" placeholder="Tiêu đề ghi chú"/>
                        </div>
                        <group>
                            <group>
                                <field name="customer_id" options="{'no_create': True}"/>
                                <field name="nhan_vien_id" options="{'no_create': True}"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="note_type"/>
                                <field name="is_pinned"/>
                            </group>
                        </group>
                        <group string="Nội dung ghi chú">
                            <field name="note" nolabel="1" placeholder="Nhập nội dung ghi chú..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_note_tree" model="ir.ui.view">
            <field name="name">note.tree</field>
            <field name="model">note</field>
            <field name="arch" type="xml">
                <tree string="Danh sách ghi chú" decoration-info="is_pinned == True"
                      decoration-warning="note_type == 'important'">
                    <field name="note_id"/>
                    <field name="note_name"/>
                    <field name="customer_id"/>
                    <field name="nhan_vien_id"/>
                    <field name="date"/>
                    <field name="note_type"/>
                    <field name="is_pinned"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record model="ir.ui.view" id="note_search">
            <field name="name">note.search</field>
            <field name="model">note</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm ghi chú">
                    <field name="note_id"/>
                    <field name="note_name"/>
                    <field name="customer_id"/>
                    <field name="nhan_vien_id"/>
                    <separator/>
                    <filter string="Đã ghim" name="pinned" domain="[('is_pinned', '=', True)]"/>
                    <filter string="Quan trọng" name="important" domain="[('note_type', '=', 'important')]"/>
                    <separator/>
                    <group expand="0" string="Nhóm theo">
                        <filter string="Khách hàng" name="group_customer" context="{'group_by': 'customer_id'}"/>
                        <filter string="Nhân viên" name="group_employee" context="{'group_by': 'nhan_vien_id'}"/>
                        <filter string="Loại" name="group_type" context="{'group_by': 'note_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_note" model="ir.actions.act_window">
            <field name="name">Ghi chú</field>
            <field name="res_model">note</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="note_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo ghi chú mới
                </p>
            </field>
        </record>
    </data>
</odoo>