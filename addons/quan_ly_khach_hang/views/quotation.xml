<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_quotation_form" model="ir.ui.view">
        <field name="name">quotation.form</field>
        <field name="model">quotation</field>
        <field name="arch" type="xml">
            <form string="Báo giá">
                <header>
                    <button name="action_send" string="Gửi báo giá" type="object" 
                            class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_accept" string="Chấp nhận" type="object" 
                            class="btn-success" attrs="{'invisible': [('state', '!=', 'sent')]}"/>
                    <button name="action_reject" string="Từ chối" type="object" 
                            class="btn-warning" attrs="{'invisible': [('state', '!=', 'sent')]}"/>
                    <button name="action_create_sale_order" string="Tạo đơn hàng" type="object" 
                            class="btn-primary" attrs="{'invisible': [('state', '!=', 'accepted')]}"/>
                    <button name="action_create_contract" string="Tạo hợp đồng" type="object" 
                            class="btn-success" attrs="{'invisible': [('state', '!=', 'accepted')]}"/>
                    <button name="action_cancel" string="Hủy" type="object" 
                            attrs="{'invisible': [('state', 'not in', ['draft', 'sent'])]}"/>
                    <button name="action_draft" string="Về nháp" type="object" 
                            attrs="{'invisible': [('state', 'not in', ['cancelled', 'rejected'])]}"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,sent,accepted"/>
                </header>
                <sheet>
                    <field name="sale_order_ids" invisible="1"/>
                    <field name="contract_ids" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_orders" icon="fa-shopping-cart" 
                                attrs="{'invisible': [('state', '!=', 'accepted')]}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Đơn hàng</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_contracts" icon="fa-file-text" 
                                attrs="{'invisible': [('state', '!=', 'accepted')]}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Hợp đồng</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Hết hạn" bg_color="bg-danger" 
                            attrs="{'invisible': [('is_expired', '=', False)]}"/>
                    <widget name="web_ribbon" title="Được chấp nhận" bg_color="bg-success" 
                            attrs="{'invisible': [('state', '!=', 'accepted')]}"/>
                    <div class="oe_title">
                        <label for="quotation_id"/>
                        <h1>
                            <field name="quotation_id" placeholder="Mã báo giá"/>
                        </h1>
                        <field name="quotation_name" placeholder="Tên báo giá"/>
                    </div>
                    <group>
                        <group string="Thông tin khách hàng">
                            <field name="customer_id" options="{'no_create': True}"/>
                            <field name="nhan_vien_id" options="{'no_create': True}"/>
                        </group>
                        <group string="Thông tin hiệu lực">
                            <field name="create_date"/>
                            <field name="validity_date"/>
                            <field name="days_until_expiry" attrs="{'invisible': [('state', 'in', ['accepted', 'rejected', 'cancelled'])]}"/>
                            <field name="is_expired" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi tiết báo giá" name="lines">
                            <field name="quotation_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_name"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="uom"/>
                                    <field name="unit_price"/>
                                    <field name="discount"/>
                                    <field name="subtotal"/>
                                    <field name="tax_rate"/>
                                    <field name="tax_amount"/>
                                    <field name="total"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="amount_untaxed" widget="monetary"/>
                                <field name="amount_tax" widget="monetary"/>
                                <field name="amount_total" widget="monetary" class="oe_subtotal_footer_separator"/>
                                <field name="global_discount"/>
                                <field name="global_discount_amount" widget="monetary"/>
                                <field name="amount_after_discount" widget="monetary" class="oe_subtotal_footer_separator oe_highlight"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <div class="oe_clear"/>
                        </page>
                        <page string="Điều khoản thanh toán" name="payment">
                            <group>
                                <group>
                                    <field name="payment_term"/>
                                </group>
                            </group>
                            <field name="payment_term_note" placeholder="Chi tiết điều khoản thanh toán..."/>
                        </page>
                        <page string="Điều khoản và Ghi chú" name="terms">
                            <group string="Điều khoản và điều kiện">
                                <field name="terms_conditions" nolabel="1" placeholder="Nhập điều khoản và điều kiện..."/>
                            </group>
                            <group string="Ghi chú">
                                <field name="notes" nolabel="1" placeholder="Ghi chú thêm..."/>
                            </group>
                        </page>
                        <page string="File đính kèm" name="attachments">
                            <group>
                                <field name="file_attachment" filename="file_name"/>
                                <field name="file_name" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_quotation_tree" model="ir.ui.view">
        <field name="name">quotation.tree</field>
        <field name="model">quotation</field>
        <field name="arch" type="xml">
            <tree string="Danh sách báo giá" decoration-danger="is_expired == True" 
                  decoration-success="state == 'accepted'" decoration-muted="state in ['rejected', 'cancelled']">
                <field name="quotation_id"/>
                <field name="customer_id"/>
                <field name="nhan_vien_id"/>
                <field name="create_date"/>
                <field name="validity_date"/>
                <field name="amount_after_discount" widget="monetary"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'accepted'"
                       decoration-warning="state == 'sent'"
                       decoration-danger="state in ['rejected', 'expired']"/>
                <field name="is_expired" invisible="1"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_quotation_search" model="ir.ui.view">
        <field name="name">quotation.search</field>
        <field name="model">quotation</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm báo giá">
                <field name="quotation_id"/>
                <field name="quotation_name"/>
                <field name="customer_id"/>
                <field name="nhan_vien_id"/>
                <separator/>
                <filter string="Nháp" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Đã gửi" name="sent" domain="[('state', '=', 'sent')]"/>
                <filter string="Được chấp nhận" name="accepted" domain="[('state', '=', 'accepted')]"/>
                <filter string="Bị từ chối" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <filter string="Hết hạn" name="expired" domain="[('is_expired', '=', True)]"/>
                <separator/>
                <filter string="Của tôi" name="my_quotations" domain="[('nhan_vien_id.user_id', '=', uid)]"/>
                <separator/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Khách hàng" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Nhân viên" name="group_employee" context="{'group_by': 'nhan_vien_id'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Tháng tạo" name="group_month" context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_quotation" model="ir.actions.act_window">
        <field name="name">Báo giá</field>
        <field name="res_model">quotation</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_quotation_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo báo giá mới
            </p>
            <p>
                Quản lý báo giá gửi cho khách hàng, theo dõi trạng thái và chuyển đổi thành đơn hàng hoặc hợp đồng.
            </p>
        </field>
    </record>
</odoo>
