<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Root Menu -->
    <record id="menu_root" model="ir.ui.menu">
        <field name="name">AI Assistant</field>
        <field name="sequence">100</field>
        <field name="web_icon">ai_assistant,static/description/icon.png</field>
    </record>
    
    <!-- Sub-menu: Cấu hình -->
    <record id="menu_config" model="ir.ui.menu">
        <field name="name">Cấu hình</field>
        <field name="sequence">10</field>
        <field name="parent_id" ref="menu_root"/>
    </record>
    
    <record id="menu_ai_settings" model="ir.ui.menu">
        <field name="name">AI Settings</field>
        <field name="sequence">1</field>
        <field name="parent_id" ref="menu_config"/>
        <field name="action" ref="action_ai_config"/>
    </record>
</odoo>
