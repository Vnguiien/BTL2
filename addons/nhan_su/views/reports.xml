<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Dashboard Kanban View -->
        <record id="view_hr_dashboard_kanban" model="ir.ui.view">
            <field name="name">hr.dashboard.kanban</field>
            <field name="model">nhan_vien</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard o_hr_dashboard" create="false" edit="false">
                    <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <div class="o_primary">
                                            <field name="ho_ten"/>
                                        </div>
                                        <div class="o_secondary">
                                            <field name="phong_ban_id"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Dashboard Action -->
        <record id="action_hr_dashboard" model="ir.actions.act_window">
            <field name="name">Dashboard Nhân sự</field>
            <field name="res_model">nhan_vien</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{
                'search_default_active': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Chào mừng đến Dashboard Nhân sự
                </p>
                <p>
                    Tổng quan về nhân sự trong công ty
                </p>
            </field>
        </record>

        <!-- Báo cáo: Nhân viên theo phòng ban -->
        <record id="view_nhan_vien_phong_ban_pivot" model="ir.ui.view">
            <field name="name">nhan_vien.phong_ban.pivot</field>
            <field name="model">nhan_vien</field>
            <field name="arch" type="xml">
                <pivot string="Nhân viên theo Phòng ban" display_quantity="true">
                    <field name="phong_ban_id" type="row"/>
                    <field name="chuc_vu_id" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="view_nhan_vien_phong_ban_graph" model="ir.ui.view">
            <field name="name">nhan_vien.phong_ban.graph</field>
            <field name="model">nhan_vien</field>
            <field name="arch" type="xml">
                <graph string="Nhân viên theo Phòng ban" type="bar">
                    <field name="phong_ban_id"/>
                    <field name="trang_thai" type="col"/>
                </graph>
            </field>
        </record>

        <record id="action_report_nhan_vien_phong_ban" model="ir.actions.act_window">
            <field name="name">Nhân viên theo Phòng ban</field>
            <field name="res_model">nhan_vien</field>
            <field name="view_mode">pivot,graph,tree</field>
            <field name="view_id" ref="view_nhan_vien_phong_ban_pivot"/>
            <field name="domain">[('trang_thai', '=', 'active')]</field>
            <field name="context">{'search_default_group_phong_ban': 1}</field>
        </record>

        <!-- Báo cáo: Hợp đồng theo trạng thái -->
        <record id="view_hop_dong_trang_thai_pivot" model="ir.ui.view">
            <field name="name">hop_dong.trang_thai.pivot</field>
            <field name="model">hop_dong_lao_dong</field>
            <field name="arch" type="xml">
                <pivot string="Hợp đồng theo Trạng thái">
                    <field name="trang_thai" type="row"/>
                    <field name="loai_hop_dong" type="col"/>
                    <field name="luong_co_ban" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="view_hop_dong_trang_thai_graph" model="ir.ui.view">
            <field name="name">hop_dong.trang_thai.graph</field>
            <field name="model">hop_dong_lao_dong</field>
            <field name="arch" type="xml">
                <graph string="Hợp đồng theo Trạng thái" type="pie">
                    <field name="trang_thai"/>
                </graph>
            </field>
        </record>

        <record id="action_report_hop_dong_trang_thai" model="ir.actions.act_window">
            <field name="name">Hợp đồng theo Trạng thái</field>
            <field name="res_model">hop_dong_lao_dong</field>
            <field name="view_mode">pivot,graph,tree</field>
            <field name="view_id" ref="view_hop_dong_trang_thai_pivot"/>
        </record>

        <!-- Báo cáo: Lương theo phòng ban -->
        <record id="view_luong_phong_ban_pivot" model="ir.ui.view">
            <field name="name">hop_dong.luong.pivot</field>
            <field name="model">hop_dong_lao_dong</field>
            <field name="arch" type="xml">
                <pivot string="Tổng lương theo Phòng ban">
                    <field name="nhan_vien_id" type="row"/>
                    <field name="luong_co_ban" type="measure"/>
                    <field name="phu_cap" type="measure"/>
                    <field name="tong_thu_nhap" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="action_report_luong_phong_ban" model="ir.actions.act_window">
            <field name="name">Tổng lương nhân viên</field>
            <field name="res_model">hop_dong_lao_dong</field>
            <field name="view_mode">pivot,tree</field>
            <field name="view_id" ref="view_luong_phong_ban_pivot"/>
            <field name="domain">[('trang_thai', '=', 'active')]</field>
        </record>

        <!-- Thống kê tuổi nhân viên -->
        <record id="view_nhan_vien_tuoi_graph" model="ir.ui.view">
            <field name="name">nhan_vien.tuoi.graph</field>
            <field name="model">nhan_vien</field>
            <field name="arch" type="xml">
                <graph string="Thống kê tuổi nhân viên" type="bar">
                    <field name="tuoi" type="row"/>
                </graph>
            </field>
        </record>

        <record id="action_report_nhan_vien_tuoi" model="ir.actions.act_window">
            <field name="name">Thống kê tuổi nhân viên</field>
            <field name="res_model">nhan_vien</field>
            <field name="view_mode">graph,tree</field>
            <field name="view_id" ref="view_nhan_vien_tuoi_graph"/>
            <field name="domain">[('trang_thai', '=', 'active')]</field>
        </record>

        <!-- Thống kê giới tính -->
        <record id="view_nhan_vien_gioi_tinh_graph" model="ir.ui.view">
            <field name="name">nhan_vien.gioi_tinh.graph</field>
            <field name="model">nhan_vien</field>
            <field name="arch" type="xml">
                <graph string="Thống kê giới tính" type="pie">
                    <field name="gioi_tinh"/>
                </graph>
            </field>
        </record>

        <record id="action_report_nhan_vien_gioi_tinh" model="ir.actions.act_window">
            <field name="name">Thống kê giới tính</field>
            <field name="res_model">nhan_vien</field>
            <field name="view_mode">graph,tree</field>
            <field name="view_id" ref="view_nhan_vien_gioi_tinh_graph"/>
            <field name="domain">[('trang_thai', '=', 'active')]</field>
        </record>

    </data>
</odoo>
